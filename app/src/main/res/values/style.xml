<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="botones" >
        <item name="android:background">@drawable/boton</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="DialogBasicCustomStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/secondaryColor</item>

    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="android:windowBackground">
            @drawable/splashscreen
        </item>
    </style>

    <style name="texto_simple_explicacion" >
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="medidas_img_puchero">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="medidas_dantzaris">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="boton2">
        <item name="android:background">@drawable/boton</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:strokeColor">@color/secondaryColor</item>
    </style>

    <style name="titulo1">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="titulo2">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Navigationestiloa">
        <item name="android:paddingLeft">15dp</item>
        <item name="itemTextColor">@color/blanco</item>
        <item name="itemBackground">@color/transparent</item>
    </style>

    <style name="Body_ThemeOverlay.MaterialComponents.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogBodyTextStyle">@style/BodyMaterialAlertDialog.MaterialComponents.Body.Text</item>
    </style>

    <style name="BodyMaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_unir" >
        <item name="android:gravity">start</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
        <item name="android:textSize">11dp</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="juegos_explicacion" >
        <item name="android:gravity">start</item>
        <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="botones2" >
        <item name="android:background">@drawable/boton</item>
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
</resources>