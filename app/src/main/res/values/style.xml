<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="botones" >
        <item name="android:background">@drawable/boton</item>
        <item name="backgroundTint">@color/secondaryColor</item>
    </style>
    <style name="splashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" >
        <item name="android:windowBackground">
            @drawable/splashscreen
        </item>
    </style>

    <style name="texto_simple_explicacion" >

        <item name="android:gravity">start</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:lineSpacingExtra">8sp</item>

    </style>





    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryTextColor</item>
    </style>

    <style name="medidas_img_puchero">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="medidas_dantzaris">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

</resources>