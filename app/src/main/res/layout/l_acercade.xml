<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a_acercade">

    tools:viewBindingIgnore="true"

    <TextView
        android:id="@+id/txtapodo_titulo"
        android:layout_width="163dp"
        android:layout_height="43dp"
        android:text="@string/balmapp"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/txtacercade_descr"
        android:layout_width="278dp"
        android:layout_height="303dp"
        android:text="@string/explicacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtapodo_titulo"
        app:layout_constraintVertical_bias="0.108" />

    <ImageView
        android:id="@+id/imgacercade_fp"
        android:layout_width="146dp"
        android:layout_height="151dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtacercade_descr"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fptxurdinaga_logo"
       />

    <ImageView
        android:id="@+id/imagenacercade_upv"
        android:layout_width="146dp"
        android:layout_height="151dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgacercade_fp"
        app:layout_constraintTop_toBottomOf="@+id/txtacercade_descr"
        app:layout_constraintVertical_bias="0.333"
        app:srcCompat="@drawable/upvehulogo"
       />

</androidx.constraintlayout.widget.ConstraintLayout>