<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a_acercade">

    tools:viewBindingIgnore="true"

    <TextView
        android:id="@+id/txtapodo_titulo"
        android:layout_width="163dp"
        android:layout_height="43dp"
        android:text="@string/balmapp"
        android:textAlignment="center"
        style="@style/titulo1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.09" />

    <ImageView
        android:id="@+id/imagenacercade_upv"
        android:layout_width="146dp"
        android:layout_height="151dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgacercade_fp"
        app:layout_constraintTop_toBottomOf="@+id/txtacercade_descr"
        app:layout_constraintVertical_bias="0.737"
        app:srcCompat="@drawable/upvehulogo" />

    <ImageView
        android:id="@+id/imgacercade_fp"
        android:layout_width="146dp"
        android:layout_height="151dp"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtacercade_descr"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/fptxurdinaga_logo" />

    <TextView
        android:id="@+id/txtacercade_descr"
        android:layout_width="334dp"
        android:layout_height="374dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="39dp"
        android:text="@string/nosotros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtapodo_titulo" />


</androidx.constraintlayout.widget.ConstraintLayout>